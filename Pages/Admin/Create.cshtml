@page
@model MyWebSite.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@Localizer["Create"]</h1>

<h4>@Localizer["Admin"]</h4>
<hr />
<h2>@Localizer["Введите свои данные:"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Admin.LastName" class="control-label">@Localizer["Фамилия"]</label>
                <input asp-for="Admin.LastName" class="form-control" />
                <span asp-validation-for="Admin.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.FirstMidName" class="control-label">@Localizer["Имя"]</label>
                <input asp-for="Admin.FirstMidName" class="form-control" />
                <span asp-validation-for="Admin.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.HireDate" class="control-label">@Localizer["Дата найма"]</label>
                <input asp-for="Admin.HireDate" class="form-control" />
                <span asp-validation-for="Admin.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
