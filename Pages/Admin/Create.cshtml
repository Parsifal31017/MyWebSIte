@page
@model MyWebSite.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@Localizer["Create"]</h1>

<h4>@Localizer["Admin"]</h4>
<hr />
<h2>@Localizer["Enter your details:"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Admin.LastName" class="control-label">@Localizer["Last Name"]</label>
                    <input asp-for="Admin.LastName" class="form-control" />
                    <span asp-validation-for="Admin.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Admin.FirstMidName" class="control-label">@Localizer["First Name"]</label>
                    <input asp-for="Admin.FirstMidName" class="form-control" />
                    <span asp-validation-for="Admin.FirstMidName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Admin.HireDate" class="control-label">@Localizer["Hire Date"]</label>
                    <input asp-for="Admin.HireDate" class="form-control" />
                    <span asp-validation-for="Admin.HireDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
