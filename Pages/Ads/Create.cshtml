@page
@model MyWebSite.Pages.Ads.CreateModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="container">
        <h1>@Localizer["Создать"]</h1>

        <h4>@Localizer["Объявления"]</h4>
        <hr />
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <h5 asp-for="Ads.AdsID" class="control-label">@Localizer["Номер:"]</h5>
                                <input asp-for="Ads.AdsID" class="form-control" />
                                <span asp-validation-for="Ads.AdsID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h5 asp-for="Ads.Title" class="control-label">@Localizer["Название:"]</h5>
                                <input asp-for="Ads.Title" class="form-control" />
                                <span asp-validation-for="Ads.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h5 asp-for="Ads.Tags" class="control-label">@Localizer["Тэги:"]</h5>
                                <input asp-for="Ads.Tags" class="form-control" />
                                <span asp-validation-for="Ads.Tags" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h5 asp-for="Ads.Department" class="control-label">@Localizer["Описание:"]</h5>
                                <select asp-for="Ads.DepartmentID" class="form-control"
                                        asp-items="@Model.DepartmentNameSL">
                                    <option value="">Выберите Отдел</option>
                                </select>
                                <span asp-validation-for="Ads.DepartmentID" class="text-danger" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="Index">@Localizer["Вернуться к списку"]</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
