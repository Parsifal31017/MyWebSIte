@page
@model MyWebSite.Pages.Company.CreateModel

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@Localizer["Create"]</h1>

<h4>@Localizer["Company"]</h4>
