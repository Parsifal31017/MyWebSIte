@page
@model MyWebSite.Pages.Ads.EditModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="container">
        <h1>@Localizer["Редактировать"]</h1>

        <h4>@Localizer["Объявления"]</h4>
        <hr />
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col-md-7">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Ads.AdsID" />
                            <div class="form-group">
                                <label asp-for="Ads.AdsID" class="control-label"></label>
                                <div>@Html.DisplayFor(model => model.Ads.AdsID)</div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ads.Title" class="control-label"></label>
                                <input asp-for="Ads.Title" class="form-control" />
                                <span asp-validation-for="Ads.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ads.Tags" class="control-label"></label>
                                <input asp-for="Ads.Tags" class="form-control" />
                                <span asp-validation-for="Ads.Tags" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ads.Department" class="control-label"></label>
                                <select asp-for="Ads.DepartmentID" class="form-control"
                                        asp-items="@Model.DepartmentNameSL"></select>
                                <span asp-validation-for="Ads.DepartmentID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="./Index">@Localizer["Вернуться к списку"]</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
