@page
@model MyWebSite.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstMidName" class="control-label"></label>
                <input asp-for="User.FirstMidName" class="form-control" />
                <span asp-validation-for="User.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.HireDate" class="control-label"></label>
                <input asp-for="User.HireDate" class="form-control" />
                <span asp-validation-for="User.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Age" class="control-label"></label>
                <input asp-for="User.Age" class="form-control" />
                <span asp-validation-for="User.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Country" class="control-label"></label>
                <input asp-for="User.Country" class="form-control" />
                <span asp-validation-for="User.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label"></label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AboutMe" class="control-label"></label>
                <input asp-for="User.AboutMe" class="form-control" />
                <span asp-validation-for="User.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Comments" class="control-label"></label>
                <input asp-for="User.Comments" class="form-control" />
                <span asp-validation-for="User.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.OfficeAssignment.Location" class="control-label"></label>
                <input asp-for="User.OfficeAssignment.Location" class="form-control" />
                <span asp-validation-for="User.OfficeAssignment.Location" class="text-danger" />
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var ads in Model.AssignedCourseDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCourses"
                                               value="@ads.AdsID"
                                               @(Html.Raw(ads.Assigned ? "checked=\"checked\"" : "")) />
                                        @ads.AdsID @:  @ads.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
