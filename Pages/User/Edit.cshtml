@page
@model MyWebSite.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["User"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label">@Localizer["Last Name"]</label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstMidName" class="control-label">@Localizer["First Name"]</label>
                <input asp-for="User.FirstMidName" class="form-control" />
                <span asp-validation-for="User.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.HireDate" class="control-label">@Localizer["Hire Date"]</label>
                <input asp-for="User.HireDate" class="form-control" />
                <span asp-validation-for="User.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Age" class="control-label">@Localizer["Age"]</label>
                <input asp-for="User.Age" class="form-control" />
                <span asp-validation-for="User.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Country" class="control-label">@Localizer["Country"]</label>
                <input asp-for="User.Country" class="form-control" />
                <span asp-validation-for="User.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label">@Localizer["City"]</label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label">@Localizer["Email"]</label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AboutMe" class="control-label">@Localizer["About Me"]</label>
                <input asp-for="User.AboutMe" class="form-control" />
                <span asp-validation-for="User.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
