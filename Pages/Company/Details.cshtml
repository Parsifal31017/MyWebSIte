                                @Html.DisplayNameFor(model => model.Company.Enrollments)
                            </dt>
                            <dd class="col-sm-10">
                                <table class="table">
                                    <tr>
                                        <th>@Localizer["Course Title"]</th>
                                        <th>@Localizer["Grade"]</th>
                                    </tr>
                                    @foreach (var item in Model.Company.Enrollments)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ads.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Grade)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@Model.Company.ID">@Localizer["Edit"]</a> |
                        <a asp-page="./Index">@Localizer["Back to List"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

