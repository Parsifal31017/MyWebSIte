@page
@model MyWebSite.Pages.AboutModel

@{
    ViewData["Title"] = "Company Body Statistics";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["Статистика Компании"]</h2>

<table>
    <tr>
        <th>
            @Localizer["Дата Регистрации"]
        </th>
        <th>
            @Localizer["Компания"]
        </th>
    </tr>

    @foreach (var item in Model.Company)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @item.CompanyCount
            </td>
        </tr>
    }
</table>
